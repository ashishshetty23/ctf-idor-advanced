<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Invoice <%= invoice.id %></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body class="page page-invoice">
    <main class="container">
      <h2>Invoice Details</h2>
      <div class="invoice">
        <div>
          <strong class="inv-title"><%= invoice.title %></strong>
          <div class="inv-id">ID: <%= invoice.id %></div>
          <div class="muted">Owner: <%= owner ? owner.username : 'Unknown' %> (userId: <%= invoice.ownerUserId %>)</div>
        </div>
      </div>

      <section style="margin-top:16px">
        <h3>Notes</h3>
        <pre style="white-space:pre-wrap;background:#fbfdff;padding:12px;border-radius:6px;border:1px solid #eef2ff"><%= invoice.notes %></pre>
      </section>

      <p style="margin-top:18px"><a class="link" href="/my-invoices">Back to My Invoices</a> â€¢ <a class="link" href="/">Home</a></p>
    </main>
  </body>
</html>
